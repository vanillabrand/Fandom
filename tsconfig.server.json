{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist-server",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "noEmit": false
    },
    "include": [
        "server/**/*",
        "src/types.ts",
        "services/**/*"
    ],
    "exclude": [
        "src",
        "node_modules",
        "dist",
        "server/scripts"
    ]
}